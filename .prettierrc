{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "useTabs": false,
    "singleQuote": false,
    "printWidth": 100,
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript",
                "trailingComma": "all",
                "arrowParens": "always"
            }
        },
        {
            "files": "*.sol",
            "options": {
                "bracketSpacing": true,
                "explicitTypes": "always"
            }
        }
    ]
}
